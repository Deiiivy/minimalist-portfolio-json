---
import { basics } from "../cv.json";
import X from '../icons/X.astro'
import Github from '../icons/Github.astro'
import Mail from '../icons/Mail.astro'
import Linkedin from '../icons/Linkedin.astro'
const { name, label, image, email, phone, profiles } = basics;
---

<section>
    <div class="info">
        <h1>{name}</h1>
        <p>{label}</p>
        <footer>
            {profiles.map(profile => (
                <a href={profile.url}>
                    {profile.network === 'GitHub' && <Github />}
                    {profile.network === 'LinkedIn' && <Linkedin />}
                    {profile.network === 'X' && <X />}
                </a>
            ))}
            <a href={`mailto:${email}`}><Mail /></a>
        </footer>
    </div>
    <div class="image">
        <img src={image} alt={name} />
    </div>
</section>

<style>
    section {
        max-width: 700px;
        margin: 35px auto 72px;
        text-align: center;
        display: flex;
    }

    .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    }
    .image img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 128px;
        border-radius: 16px;
    }

    footer {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 10px;
    }

    footer a {
        text-decoration: none;
        color: #333;
        font-size: 24px;
    }
</style>